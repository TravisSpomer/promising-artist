{
	"compileOnSave": true,
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"baseUrl": "src",
		"declaration": true,
		"experimentalDecorators": true,
		"lib": [ "ES2017", "dom" ],
		"module": "ES6",
		"noEmit": false,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"outDir": "build/",
		"removeComments": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strictNullChecks": true,
		"target": "ESNext"
	},
	"include": [
		"src/**/*.js",
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules/**"
	]
}